generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feedback {
  id      Int     @id @default(autoincrement())
  name    String
  email   String
  message String
  createdAt DateTime @default(now())

  @@unique([name, email, message]) // Add this line to enforce uniqueness
}


model Course {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  scormUrl    String
  createdAt   DateTime @default(now())
}


model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  role      String   @default("user") // user or admin
  createdAt DateTime @default(now())
}
