generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feedback {
  id      Int    @id @default(autoincrement())
  name    String
  email   String
  message String
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  scormUrl    String
  createdAt   DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  role     String @default("user") // Default role is "user"
}


